{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": ["./tsconfig.*?.json"]
      },
      "extends": ["plugin:@nx/typescript", "love", "prettier"],
      "rules": {
        // It's not harmful.
        "@typescript-eslint/no-empty-interface": "off",
        "@typescript-eslint/no-empty-function": "off",

        // It's not so harmful to coarse values to strings, especially inside
        // template strings from which we often construct messages.
        "@typescript-eslint/restrict-template-expressions": "off",

        // Triple slash reference has a different purpose.
        "@typescript-eslint/triple-slash-reference": "off",

        // Too many false negatives.
        "@typescript-eslint/no-unsafe-argument": "off",

        // Just annoying. It's a warning anyway.
        "@typescript-eslint/no-explicit-any": "off",

        // {} is semantically different from the "object" and "Record".
        "@typescript-eslint/ban-types": "off",

        // I rarely need those names.
        "react/display-name": "off"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript", "love", "prettier"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
